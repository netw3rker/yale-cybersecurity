{% set hero_img = true %}

{% extends "@templates/primary.twig" %}
  {% block page_hero %}
    {% include "@molecules/hero/hero.twig" with {
      hero__modifiers: ['home'],
      hero_img_src: "https://picsum.photos/1440/900",
      hero_heading: 'Empowered Users, Safer Yale.',
      hero_subheading: 'We are here to empower you to stay safe online.',
    } %}
  {% endblock %}
  {% block page_content %}
    {% embed "@organisms/bg/bg.twig" with {
      bg__modifiers: ['blue', 'top-shadow', 'white-content'],
    } %}
      {% block bg_contents %}
        {% include "@pages/landing-pages/home-split-section.twig" %}
      {% endblock %}
    {% endembed %}
    {% include "@molecules/cta/cta.twig" %}
    {% include "@organisms/grid/grid-container.twig" with {
      grid_container_modifiers: ['pattern']
    } %}
  {% endblock %}
