{% extends "@templates/primary.twig" %}
  {% block page_hero %}
    {% include "@molecules/hero/hero.twig" with {
      hero_img_src: "https://placeimg.com/1280/720/nature"
    } %}
  {% endblock %}
  {% block page_content_top %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_base_class: 'page-title',
      heading_level: '1',
      heading: 'This is a Basic Page',
    } %}
    {% include "@atoms/text/headings/_heading.twig" with {
      heading_base_class: 'page-subtitle',
      heading_level: '2',
      heading: 'This is a Basic Page Subtitle',
    } %}
  {% endblock %}
  {% block page_content %}
    {% include "@molecules/text-with-image/text-with-image.twig" with {
      text_with_image__base_class: 'intro-text',
      image_src: 'https://placeimg.com/350/400/tech'
    } %}
    {% include "@molecules/text-section/text-section.twig" %}
    {% include "@molecules/image-section/image-section.twig" %}
    {% include "@molecules/text-section/text-section.twig" %}
    {% include "@molecules/image-section/image-section.twig" with {
      image_section_content_modifiers: ['large'],
      image_src: 'https://placeimg.com/1200/400/tech',
      image_caption: 'This is a large image caption.'
    } %}
    {% include "@molecules/text-with-image/text-with-image.twig" with {
      paragraph_content: basic_page_small_text
    } %}
  {% endblock %}
