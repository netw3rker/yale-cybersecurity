{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 */
#}

{% embed "@atoms/images/image/figure.twig" with {
  image_caption: content.field_caption.0,
  image_figure_modifiers: ['video'],
} %}
  {% block figure_content %}
    {{ content|without('field_caption') }}
  {% endblock %}
{% endembed %}
